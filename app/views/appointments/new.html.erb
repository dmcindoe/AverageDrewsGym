<h1> Welcome <%= session[:name] %> </h1> 

<%= form_for (@appointment) do |form|%>

    <br>
  <div class="Signup">  
    <label class="font-weight-bold"> Choose Client </label>
    <%= form.collection_select :client_id, @all_clients, :id, :name%>
    
    <br>
    
    <label class="font-weight-bold"> Assign a Trainer </label>
    <%= form.collection_select :trainer_id, @all_trainers, :id, :name%>
    
    <br>
    
    <label class="font-weight-bold"> Enter Workout Notes from Client </label>
    <%= form.text_field :workout%>
    
    <br>

    <label class="font-weight-bold"> Enter Date of Workout</label>
    <%= form.date_field :date %>    
    <br>

    <label class="font-weight-bold"> Select Timeslot</label>
    <%= form.select :timeslot, [["Early Morining: 6 to 8am"], ["Mid Morning: 9 to 11am"], ["Mid Day: 12 to 2pm"], ["Mid Afternoon: 3 to 5pm"], ["Evening: 6 to 8pm"]], {include_blank: "Select Appointment Time Slot"}%>
    </div>
   
    <br>
    
    <%= form.submit%>

    <br>

    <button> <%= link_to "Log out", logout_path, method: "delete" %></button>
    <% end %>