<div class="Clientbackdrop">
  <div class="Clientheader">
  <h1><%= @client.name %></h1>
  <h2> Appointments with Trainers </h2>
  </div>
    
    
    <br>
    <% @client.appointments.uniq.each do |apt| %>
    <div class="card float-left mr-2 mb-2" style="width: 18rem;">
    <div class="card-body">
    <h5 class="card-title"><%= link_to apt.trainer.name, trainer_path(apt.trainer) %> </h5>
     <small class="card-subtitle mb-2 text-muted"> Click Appointment Date to Edit or Delete </small>
    <h5> Upcomming Workout Client Notes: </h5>
    <ul>
    <li class="card-text"> <%= apt.workout %></li>
    <li class="card-text"> <%= link_to apt.date, edit_appointment_path(apt) %></li>
    <li class="card-text"> <%= apt.timeslot%> </li>
    </ul>
    <hr style="width:50%", size="3", color=black>
    </div>
    </div>
  <% end %>
</div>
