<div class="Trainerstyle">
 <h1 class="Trainerheader"> Current Trainers On Staff and Available</h1>

 <div class="card" style="width: 18rem;">
  <div class="card-body">
  <% @trainers.each do |trainer| %>
    <h5 class="card-title"><%= link_to trainer.name, trainer_path(trainer) %></h5>
    <h6 class="card-subtitle mb-2 text-muted"> Area of Expertise</h6>
    <p class="card-text"><%= trainer.expertise%></p>
    <hr style="width:50%", size="3", color=black>
    <%end%>
  </div>
 </div>
</div>
